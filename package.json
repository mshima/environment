{
  "name": "yeoman-environment",
  "version": "3.0.0-beta0",
  "description": "Handles the lifecyle and bootstrapping of generators in a specific environment",
  "homepage": "http://yeoman.io",
  "author": "Yeoman",
  "files": [
    "lib"
  ],
  "main": "lib/environment.js",
  "keywords": [
    "development",
    "dev",
    "build",
    "tool",
    "cli",
    "scaffold",
    "scaffolding",
    "generate",
    "generator",
    "yeoman",
    "app"
  ],
  "license": "BSD-2-Clause",
  "repository": "yeoman/environment",
  "engines": {
    "node": ">=12.10.0"
  },
  "scripts": {
    "pretest": "xo",
    "fix": "xo --fix",
    "test": "nyc mocha",
    "test-base": "nyc mocha test/environment*.js test/store.js test/util.js test/adapter.js",
    "test-environment": "nyc mocha test/environment.js",
    "test-generators": "nyc mocha test/generators.js",
    "test-namespace": "nyc mocha test/namespace.js test/flags.js",
    "test-repository": "nyc mocha test/repository.js",
    "test-resolver": "nyc mocha test/resolver.js",
    "doc": "jsdoc -c ./jsdoc.json ./readme.md",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "dependencies": {
    "arrify": "^2.0.1",
    "async": "^3.2.0",
    "chalk": "^4.1.0",
    "cli-table": "^0.3.1",
    "dateformat": "^4.4.0",
    "debug": "^4.1.1",
    "diff": "^4.0.2",
    "error": "^7.2.1",
    "escape-string-regexp": "^4.0.0",
    "execa": "^4.0.0",
    "globby": "^11.0.1",
    "grouped-queue": "^1.1.0",
    "inquirer": "^7.1.0",
    "is-scoped": "^2.1.0",
    "istextorbinary": "^5.7.0",
    "lodash": "^4.17.10",
    "log-symbols": "^4.0.0",
    "mem-fs": "^1.1.0",
    "mem-fs-editor": "^7.0.1",
    "npm-api": "^1.0.0",
    "pretty-bytes": "^5.3.0",
    "read-chunk": "^3.2.0",
    "semver": "^7.1.3",
    "slash": "^3.0.0",
    "strip-ansi": "^6.0.0",
    "text-table": "^0.2.0",
    "through2": "^4.0.2",
    "untildify": "^4.0.0",
    "yeoman-generator": "^4.8.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "cross-spawn": "^7.0.1",
    "fs-extra": "^9.0.1",
    "jsdoc": "^3.6.3",
    "mocha": "^8.0.1",
    "nyc": "^15.0.0",
    "sinon": "^9.0.2",
    "sinon-test": "^3.0.0",
    "tui-jsdoc-template": "^1.2.2",
    "xo": "^0.32.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^3.0.0"
  },
  "xo": {
    "space": true,
    "envs": [
      "node",
      "mocha"
    ],
    "rules": {
      "import/no-dynamic-require": "off",
      "prefer-spread": "off",
      "padding-line-between-statements": "off",
      "unicorn/no-hex-escape": "off",
      "unicorn/prefer-reflect-apply": "off",
      "prefer-rest-params": "off",
      "node/prefer-promises/fs": "off",
      "promise/prefer-await-to-then": "off",
      "unicorn/no-reduce": "off"
    }
  }
}
